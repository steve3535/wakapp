#!/bin/bash
~
for i in $(find "$HOME"/scan_results/*/* -type d);do
  g=$(basename "$i")
  for j in `find "$i" -name "vstats*"`;do
    s=$(basename "$j" | cut -d. -f1)
    h=`echo "${s:7}"`
    date=$(awk -F "|" '{print $1}' "$j")
    crit=$(awk -F "|" '{print $3}' "$j")
    imp=$(awk -F "|" '{print $4}' "$j")
    mod=$(awk -F "|" '{print $5}' "$j")
    low=$(awk -F "|" '{print $6}' "$j")
    echo $g:$h $date $crit $imp $mod $low
    ./redis-bash-cli hset $g:$h date $date crit $crit imp $imp mod $mod low $low  
    ./redis-bash-cli hset $g:$h:$date date $date crit $crit imp $imp mod $mod low $low #archive it in redis --> is it a good idea ? if not use for cache why not just write those info to mysql ?
  done
done
    
